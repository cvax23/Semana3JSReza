<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
			BackgroundColor="#127ac7"
            Title="Welcome"	        
            xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana3JSReza.MainPage">
        
    <StackLayout VerticalOptions="Center" >

        <StackLayout VerticalOptions ="Center" Padding="0,30">
            <Label 
			Text="Grades Processor 
                Universidad Israel"
			VerticalOptions="Center"    
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            TextColor="White"
			FontSize="30" 
			FontAttributes="Bold"  
			HorizontalOptions="Center" />
        </StackLayout>

        <Entry
            x:Name="txtUser"
            Placeholder="User"
            HorizontalTextAlignment="Center"
            FontSize="20" 
            TextColor="White"/>
        <Entry
            x:Name="txtPassword"
            Placeholder="Password"
            HorizontalTextAlignment="Center"
            FontSize="20"
            TextColor="White"
            IsPassword="True"/>

        <StackLayout Padding="30">
        <Button 
			x:Name="btnLogin"
            Text="Login" 
			TextColor="White"
            FontSize="20"
			BackgroundColor="#1dabf0"
            Clicked="btnLogin_Clicked"
            />
        </StackLayout>
        
    </StackLayout>
    
</ContentPage>
